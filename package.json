{
  "name": "prod-deployment-test",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "cronbake": "^0.4.0"
  },
  "scripts": {
    "dev": "NODE_APP_INSTANCE=1 bun --watch index",
    "build": "bun build --compile --target bun-linux-x64 --outfile ./dist/linux-amd64 ./index.ts",
    "compress": "cd dist && tar -czvf ./linux-amd64.tar.gz ./linux-amd64",
    "start": "pm2 start ./dist/linux-amd64 -i max --name main-server"
  }
}